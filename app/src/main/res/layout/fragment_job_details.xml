<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="fragments.JobDetailsFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e9e8dd"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="fill_parent"
            android:layout_height="100px"
            android:layout_marginTop="120px"
            android:layout_gravity="center"
            android:src="@drawable/magnifyingglassicon" />

        <TextView
            android:layout_width="440px"
            android:layout_height="80px"
            android:layout_gravity="center"
            android:id="@+id/jobTitle2"
            android:text="Job Title" />

        <TextView
            android:layout_width="440px"
            android:layout_height="80px"
            android:lines="4"
            android:minLines="1"
            android:maxLines="6"
            android:layout_gravity="center"
            android:id="@+id/jobDescription2"
            android:scrollbars="vertical"
            android:text="Job Description" />

        <TextView
            android:layout_width="440px"
            android:layout_height="80px"
            android:layout_gravity="center"
            android:id="@+id/employerName"
            android:layout_marginTop="30px"
            android:text="Employer Name"/>

        <TextView
            android:layout_width="440px"
            android:layout_height="80px"
            android:layout_gravity="center"
            android:id="@+id/employerEmail2"
            android:layout_marginTop="30px"
            android:text="Employer Email"/>

        <TextView
            android:id="@+id/phone2"
            android:layout_width="440px"
            android:layout_height="80px"
            android:layout_gravity="center"
            android:text="Employer Phone" />

        <Button
            android:id="@+id/sendEmail2"
            android:layout_width="440px"
            android:layout_height="80px"
            android:layout_gravity="center"
            android:layout_marginTop="30px"
            android:background="@drawable/btn_back"
            android:text="@string/compose_email"/>

        <Button
            android:id="@+id/dialNumber2"
            android:layout_width="440px"
            android:layout_height="80px"
            android:layout_gravity="center"
            android:layout_marginTop="30px"
            android:background="@drawable/btn_back"
            android:text="@string/dial_number"/>

    </LinearLayout>

</FrameLayout>

