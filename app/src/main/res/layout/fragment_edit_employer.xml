<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/employerEditProfileFrame"
    android:background="@color/white"
    tools:context="fragments.EditEmployerFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/editEmployerImageView"
            android:layout_width="fill_parent"
            android:layout_height="100px"
            android:layout_gravity="center"
            android:src="@drawable/magnifyingglassicon" />

        <EditText
            android:layout_width="440px"
            android:layout_height="80px"
            android:inputType="textPersonName"
            android:layout_gravity="center"
            android:id="@+id/editCompanyName"
            android:hint="Company Name" />


        <EditText
            android:id="@+id/editEmployerPassword"
            android:layout_width="440px"
            android:layout_height="80px"
            android:layout_gravity="center"
            android:hint="******"
            android:inputType="textPassword" />


        <EditText
            android:layout_width="440px"
            android:layout_height="80px"
            android:layout_gravity="center"
            android:ems="10"
            android:id="@+id/editAddress"
            android:hint="Address"/>

        <EditText
            android:layout_width="440px"
            android:layout_height="80px"
            android:layout_gravity="center"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editLatitude"
            android:hint="Latitude"/>

        <EditText
            android:layout_width="440px"
            android:layout_height="80px"
            android:layout_gravity="center"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editLongitude"
            android:hint="Longitude"/>

        <Button
            android:layout_width="440px"
            android:layout_height="80px"
            android:id="@+id/editEmployerBtn"
            android:layout_gravity="center"
            android:background="@drawable/btn_back"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:text="Save"/>

    </LinearLayout>


</FrameLayout>

