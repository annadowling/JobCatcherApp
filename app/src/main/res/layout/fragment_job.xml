<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/jobFrame"
    android:background="@color/white"
    android:paddingTop="?android:attr/actionBarSize"
    tools:context="fragments.JobFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="fill_parent"
            android:layout_height="100px"
            android:layout_gravity="center"
            android:src="@drawable/magnifyingglassicon" />

        <EditText
            android:layout_width="440px"
            android:layout_height="80px"
            android:layout_gravity="center"
            android:id="@+id/employerEmail"
            android:layout_marginTop="30px"
            android:hint="Employer Email"/>

        <EditText
            android:id="@+id/phone"
            android:layout_width="440px"
            android:layout_height="80px"
            android:layout_gravity="center"
            android:hint="Employer Phone"
            android:inputType="phone" />


        <EditText
            android:layout_width="440px"
            android:layout_height="80px"
            android:layout_gravity="center"
            android:id="@+id/jobTitle"
            android:hint="Job Title" />

        <EditText
            android:layout_width="440px"
            android:layout_height="80px"
            android:layout_gravity="center"
            android:id="@+id/jobLatitude"
            android:hint="Latitude" />

        <EditText
            android:layout_width="440px"
            android:layout_height="80px"
            android:layout_gravity="center"
            android:id="@+id/jobLongitude"
            android:hint="Longitude" />

        <EditText
            android:layout_width="440px"
            android:layout_height="80px"
            android:lines="4"
            android:minLines="1"
            android:maxLines="6"
            android:layout_gravity="center"
            android:id="@+id/jobDescription"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:hint="Job Description" />


        <Button
            android:layout_width="440px"
            android:layout_height="80px"
            android:id="@+id/addjob"
            android:layout_gravity="center"
            android:background="@drawable/btn_back"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:text="Add Job"/>

    </LinearLayout>

</FrameLayout>

