<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/employerPortalFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragments.EmployerPortalFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e9e8dd"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="fill_parent"
            android:layout_height="100px"
            android:layout_gravity="center"
            android:layout_marginTop="140px"
            android:src="@drawable/magnifyingglassicon" />

        <EditText
            android:id="@+id/employer_email"
            android:layout_width="440px"
            android:layout_height="80px"
            android:layout_gravity="center"
            android:layout_marginTop="30px"
            android:hint="employerLogin@mail.com" />

        <EditText
            android:id="@+id/employer_password"
            android:layout_width="440px"
            android:layout_height="80px"
            android:layout_gravity="center"
            android:hint="******"
            android:inputType="textPassword" />


        <Button
            android:id="@+id/employer_loginbtn"
            android:layout_width="440px"
            android:layout_height="80px"
            android:layout_gravity="center"
            android:layout_marginTop="10px"
            android:background="@drawable/btn_back_blue"
            android:text="Login Now"
            android:textAlignment="center"
            android:textColor="#ffffff" />
        <Button
            android:id="@+id/registerEmployerBtn"
            android:layout_width="440px"
            android:layout_height="80px"
            android:layout_marginTop="10px"
            android:layout_gravity="center"
            android:background="@drawable/btn_back"
            android:text="Register"
            android:textAlignment="center"
            android:textColor="#ffffff" />


        <Button
            android:id="@+id/jobseekerPortalButton"
            android:layout_width="440px"
            android:layout_height="80px"
            android:layout_marginTop="10px"
            android:layout_gravity="center"
            android:background="@drawable/btn_back_red"
            android:text="JobSeeker Portal"
            android:textAlignment="center"
            android:textColor="#ffffff" />

    </LinearLayout>

</FrameLayout>
